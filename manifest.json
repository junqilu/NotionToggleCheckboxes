{
  "manifest_version": 3,
  "name": "Notion Auto Checkbox Tool",
  "version": "1.0",
  "description": "Automatically shows a button on Notion pages to uncheck checkboxes.",
  "permissions": [],
  "host_permissions": [
    "https://www.notion.so/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Notion Auto Checkbox Tool"
  }
}
